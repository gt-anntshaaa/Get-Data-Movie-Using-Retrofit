<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DetailMovieFragment">

    <ImageView
        android:id="@+id/imageBackdrop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/imageBackdrop"
        app:layout_constraintBottom_toBottomOf="@id/imageBackdrop"
        android:id="@+id/imageMovie"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageMovie"
        android:text="Title Movie"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:id="@+id/title"
        app:layout_constraintStart_toStartOf="@id/imageMovie"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:maxLines="5"
        android:id="@+id/overview"
        android:text="tes"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"/>

</androidx.constraintlayout.widget.ConstraintLayout>